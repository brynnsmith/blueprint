const mongoose = require("mongoose");

const CoffeeChatSchema = new mongoose.Schema({

  chatDate: {
    type: String,
    required: true,
  },
  chatTime: {
    type: String,
    required: true,
  },
  chatLocation: {
     type: String,
  },
  chatLinkURL: {
    type: String,
  },
  chatNotes: {
    type: String,
  },
  chatCompleted: {
    type: Boolean,
    default: false,
  },
  contact: {
    type: mongoose.Schema.Types.ObjectId,
    ref: "Contact",
  },
  user: {
    type: mongoose.Schema.Types.ObjectId,
    ref: "User",
  }
});

module.exports = mongoose.model("CoffeeChat", CoffeeChatSchema);