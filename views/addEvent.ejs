<%- include('partials/header') -%>
  <div class="main3">
    <section class="formBox single2">
        <div class="">
          <div class="formTitle">
            <i class="fa fa-plus fa-2x iconStyle2"></i><h2 class="h2main">Add an Event</h2>
          </div>
            <form action="/jobPost/createEvent" enctype="multipart/form-data" method="POST">
                <div class="">
                    <input type="text" class="form-control" id="eventTitle" name="eventTitle" placeholder="Event Title">
                  </div>
              <div class="">
                <label for="eventDate" class="form-label">Event Date</label>
                <input type="date" class="form-control input2" id="eventDate" name="eventDate">
              </div>
              <div class="">
                <label for="eventTime" class="form-label">Event Time</label>
                <input type="time" class="form-control input2" id="eventTime" name="eventTime">
              </div>
              <div class="">
                  <input type="text" class="form-control" id="eventLocation" name="eventLocation" placeholder="Event Location (Remote, Local Address, etc).">
              </div>
              <div class="">
                <input type="text" class="form-control" id="eventLinkURL" name="eventLinkURL" placeholder="Link to Event (URL)">
              </div>
              <div class="">
                <input type="text" class="form-control" id="eventType" name="eventType" placeholder="Type of Event (Coffee Chat,  Local Networking, etc).">
              </div>
              <div class="">
                <input type="text" class="form-control" id="eventContact" name="eventContact" placeholder="Person you are meeting with (if applicable)">
              </div>
              <div class="">
                <input type="text" class="form-control" id="eventNotes" name="eventNotes" placeholder="Additional notes about the event">
              </div>
              <button type="submit" class="btn btnFull" value="Upload">Submit</button>
            </form>
          </div>
      
    </section>
    <div class="">
      <a class="btn btn2" href="/profile">Return to Profile</a>
      <a class="btn btn2" href="/jobPost:id">Return to Job</a>
    </div>
  </div>

<%- include('partials/footer') -%>



