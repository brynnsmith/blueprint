<%- include('partials/header') -%>
  <div class="main3">
    <section class="formBox single2">
        <div class="">
          <div class="formTitle">
            <i class="fa fa-plus fa-2x iconStyle2"></i><h2 class="h2main">Add an Interview</h2>
          </div>
            <form action="/jobPost/createInterview" enctype="multipart/form-data" method="POST">
              <div class="">
                <label for="intCompany" class="form-label">Which Company?</label>
                <select name="intCompany" id="intCompany">
                    <option selected disabled>Please select a company</option> 
                  <% for (let i = 0; i < jobPosts.length; i++) { %>
                    <option><%= jobPosts[i].company %></option> 
                  <% } %>
                </select>
              </div>
              <div class="">
                <%# TODO: Limit selection based on company selection %>
                <label for="intPosition" class="form-label">Which Position?</label>
                <select name="intPosition" id="intPosition">
                    <option selected disabled>Please select a job title</option> 
                  <% for (let i = 0; i < jobPosts.length; i++) { %>
                    <option><%= jobPosts[i].jobTitle %></option> 
                  <% } %>
                </select>
              </div>
              <div class="">
                <label for="intDate" class="">Interview Date</label>
                <input type="date" class="form-control input2" id="intDate" name="intDate" placeholder="Interview Date">
              </div>
              <div class="">
                <label for="intTime" class="">Interview Time</label>
                <input type="time" class="form-control input2" id="intTime" name="intTime" placeholder="Interview Time">
              </div>
              <div class="">
                  <input type="text" class="form-control" id="intLocation" name="intLocation" placeholder="Interview Location">
              </div>
              <div class="">
                <input type="text" class="form-control" id="intLinkURL" name="intLinkURL" placeholder="Link to Interview (URL)">
              </div>
              <div class="">
                <input type="text" class="form-control" id="intType" name="intType" placeholder="Type of Interview">
              </div>
              <div class="">
                <input type="text" class="form-control" id="intPerson" name="intPerson" placeholder="Who will you be interviewing with?">
              </div>
              <div class="">
                <input type="text" class="form-control" id="intNotes" name="intNotes" placeholder="Additional Notes">
              </div>
              <button type="submit" class="btn btnFull" value="Upload">Submit</button>
            </form>
          </div>
      
    </section>
    <div class="">
      <a class="btn btn2" href="/profile">Return to Profile</a>
      <a class="btn btn2" href="/jobPost/:id">Return to Job</a>
    </div>
  </div>

<%- include('partials/footer') -%>



