<%- include('partials/header') -%>
<div class="">
  <div class="">
    <div class="">
      <h2><%= jobPost.jobTitle%></h2>
      <h3><%= jobPost.jobPostURL%></h3>
      <h2><%= jobPost.company%></h2>
      <h3><%= jobPost.companyURL%></h3>
      <h2><%= jobPost.jobLocation%></h2>
      <h2><%= jobPost.salary%></h2>
      <h2><%= jobPost.description%></h2>
      <h2>Skills Required:</h2>
      <span><%= jobPost.skillsRequired%></span>
      
      <div class="">
        <form
          class=""
          action="/jobPost/likeJobPost/<%= jobPost.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="">Likes: <%= jobPost.likes %></h3>
        <%if(jobPost.user == user.id){ %>
        <form
          action="/jobPost/deleteJobPost/<%= jobPost.id %>?_method=DELETE"
          method="POST"
          class=""
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
