<%- include('partials/headerLogin') -%>
  <main class="main justifyCenter">
      <section class="formBox formSmall">
        <section class="two-thirds">
          <div class="formHead">
            <img src="/imgs/blueprint-logo.png" alt="blueprint logo" class="blueprintLogo">
            <h2 class="welcome">Welcome to blueprint.</h2>
            <p>Don't have an account yet? <a class="link" href="/signup">Sign up</a></p>
          </div>
          <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
          <% } %>
          <% if (locals.messages.info) { %>
                <% messages.info.forEach( el => { %>
                    <div class="alert alert-info"><%= el.msg %></div>
                <% }) %>    
          <% } %>
            <form action="/login" method="POST">
              <div>
                  <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="Email Address">
              </div>
              <div>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password">
              </div>
                  <button type="submit" class="btnFull">Log in</button>
              </form>
          </section> 
          <section class="one-third side-panel">
            <img src="/imgs/rocket-icon2b.png" alt="rocket-icon" class="rocket-icon2">
            <h2 class="header-white">Plan for success</h2>
            <p class="side-text">Organize job searches, expand your network, invest in your career growth & more.</p>
          </section> 
        </section>
    </main>

    <%- include('partials/footer') -%>