<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <br><br>
          <a href="/addJob" class="btn btn-primary">Add a Job</a>
      </div>

      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<jobPosts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/jobPost/<%= jobPosts[i]._id%>">
              <img class="img-fluid" src="<%= jobPosts[i].image%>">
              <h2><%= jobPosts[i].jobTitle%></h2>
              <h2><%= jobPosts[i].company%></h2>
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>